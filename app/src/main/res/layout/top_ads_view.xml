<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_category"
    android:layout_width="120dp"
    android:layout_height="160dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/cat_description"
                android:scaleType="centerCrop"
                tools:src="@drawable/sample" />


            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:padding="4dp"
                android:text="@string/top_ads"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:scrollHorizontally="true"
            tools:text="iphone s8 plus" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/favorite"
                android:ellipsize="end"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="$4556545665456" />


            <com.varunest.sparkbutton.SparkButton
                android:id="@+id/favorite"
                android:layout_width="20dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/favorite"
                app:sparkbutton_activeImage="@drawable/favorite_yes"
                app:sparkbutton_animationSpeed="1.5"
                app:sparkbutton_iconSize="20dp"
                app:sparkbutton_inActiveImage="@drawable/favorite_no"
                app:sparkbutton_primaryColor="@color/colorAccent"
                app:sparkbutton_secondaryColor="@color/colorAccent" />

        </RelativeLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>

